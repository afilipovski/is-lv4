@using EShop.Domain.Domain

@model List<Order>

<table class="table">
    <tr>
        <th span="col">Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
    </tr>
@{
        foreach (Order o in Model)
        {
            <tr>
                <td span="row">@o.Id</td>
                <td>@o.Owner.FirstName</td>
                <td>@o.Owner.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@o.Id">Details</a>
                </td>
            </tr>
        }
}
</table>